<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="525.0" prefWidth="844.0" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.databaseapp.Controller">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <HBox alignment="CENTER" spacing="10.0">
        <!-- Верхняя панель с кнопками операций -->
        <Button onAction="#onSelectDatabaseClick" text="Выбрать БД"/>
        <Button onAction="#onSelectDatabaseClick" text="Создать БД"/>
        <Button onAction="#onSelectDatabaseClick" text="Сброс"/>
        <Button onAction="#onSelectDatabaseClick" text="Обновить БД"/>
    </HBox>

    <!-- Поля ввода для данных -->
    <HBox spacing="10.0">
        <Button onAction="#onAddButtonClick" text="Добавить" />
        <TextField fx:id="nameField" promptText="Имя" />
      <DatePicker fx:id="birthdatePicker" prefHeight="25.0" prefWidth="141.0" promptText="Дата рождения (YYYY-MM-DD)" />
        <TextField fx:id="emailField" promptText="Email" />
    </HBox>
    <HBox spacing="10.0">
        <Button onAction="#onFindButtonClick" text="Найти"/>
        <TextField fx:id="FindId" promptText="ID"/>
        <TextField fx:id="FindName" promptText="Имя"/>
        <DatePicker fx:id="FindBirthdate" prefHeight="25.0" prefWidth="141.0" promptText="Дата рождения (YYYY-MM-DD)"/>
        <TextField fx:id="FindEmail" promptText="Email"/>
    </HBox>

             <!-- Таблица для отображения данных -->
    <TableView fx:id="dataTable" editable="true">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="nameColumn" prefWidth="265.0" text="Имя" />
            <TableColumn fx:id="birthdateColumn" prefWidth="203.0" text="Дата рождения" />
            <TableColumn fx:id="emailColumn" prefWidth="275.0" text="Email" />
        </columns>
    </TableView>
    <HBox spacing="10.0">
        <Button onAction="#onDeleteButtonClick" text="Удалить" />
    </HBox>
</VBox>
